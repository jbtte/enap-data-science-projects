<!DOCTYPE html>
<html>
  <head>
    <title>Projetos de Data Science</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/fc1b910d5f.js" crossorigin="anonymous"></script>

  </head>

  <body>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <%= link_to "http://enap.gov.br/", class: "navbar-brand" do %>
        <%= image_tag('enap.png') %>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active ">
            <%= link_to "Adicione seu projeto", new_project_path, class: "nav-link text-white" %>
          </li>
        </ul>
      </div>
    </div>

        <%= yield %>

  </body>
</html>
